select.chzn-select {
    visibility: visible;
}

.js-add-filter-popup {
    width: 100%;
    height: 100%;
    position: absolute;
    z-index: 1000;
    top: 0;
    left: 0;
}

.js-add-filter-popup .popup-block {
    position: fixed;
    top: 118px;
    left: 50%;
    margin: 0 0 0 -222px;
    z-index: 1002;
    background-color: #ffffff;
    width: 444px;
    border-radius: 5px;
}

.js-add-filter-popup .dark {
    width:100%;
    height:100%;
    position:fixed;
    top: 0;
    left: 0;
    z-index:1001;
    background-color: #000000;
    opacity:0.5;
}

.js-add-filter-popup .popup-block a.close {
    float: right;
    width: 10px;
    height: 10px;
    background: url('/_images/close.png') no-repeat;
    text-decoration: none;
    margin: 6px 8px 0 0;
}