<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="ru">
<head>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8" />
    <title>Паспорт товара #{|$id|}</title>
    {|$engine_includes|}
    
    <style>
        .print-table {
            border-collapse: collapse;
            border-spacing: 0;
            color: #000;
            border: 0px;
            font-size: 13px;
            width: 100%;
            padding: 0;
            margin: 0;
        }
        
        .print-table thead h1{
            text-align: center;
        }
        
        .table {
            border-collapse: collapse;
            width: 100%;
            padding: 2px 4px;
            border: 1px solid #000;
        }
        .table thead td{
            font-weight: bold;
            background-color: #CCC;
            text-align: center;
        }
        .table td {
            border: 1px solid #000;
        }
    </style>
    
</head>
<body>
    <table class="print-table">
        <thead>
            <tr>
                <td>
                    <h1>Паспорт товара #{|$id|} {|$productname|} от {|$date|}</h1>
                </td>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    {|if $passportArray|}
                        <table class="table">
                            <thead>
                                <tr>
                                    <td>Код</td>
                                    <td>Товар</td>
                                    <td align="right">Реальное количество</td>
                                    <td align="right">Допустимое количество</td>
                                    <td width="80">Ед.</td>
                                    <td align="right">Допустимый процент отклонения</td>
                                </tr>
                            </thead>

                            <tbody>
                                {|foreach from=$passportArray item="e"|}
                                    <tr>
                                        <td>
                                            {|$e.subproductid|}
                                        </td>
                                        <td>
                                            {|$e.subproduct|}
                                        </td>
                                        <td align="right">
                                            {|$e.amountreal|}
                                        </td>
                                        <td align="right">
                                            {|$e.amountallowed|}
                                        </td>
                                        <td>
                                            {|$e.unit|}
                                        </td>
                                        <td align="right">
                                            {|$e.percent|}%
                                        </td>
                                    </tr>
                                {|/foreach|}
                            </tbody>
                        </table>
                    {|/if|}                    
                </td>
            </tr>
        </tbody>
        <tfoot>
            <tr>
                <td>
                    
                </td>
            </tr>
        </tfoot>
    </table>

</body>
</html>