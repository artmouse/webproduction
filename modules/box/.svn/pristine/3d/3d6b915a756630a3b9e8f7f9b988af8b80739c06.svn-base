<div class="form-part js-block-element" data-index="{|$index|}">
    <input type="hidden" value="{|$contentID|}" name="{|$index|}_contentid">
    <input type="hidden" value="{|$index|}" name="index[]">

    <div class="form-element">
        <div class="element-caption js-handele move">
            {|$blockName|}
            {|if $description|}
                <span class="element-caption-description">{|$description|}</span>
            {|/if|}
        </div>
        <br>
        <div class="label-list-calendar">
            <label>
                <input type="checkbox" value="1" name="{|$index|}_week[]" {|if $weekArray[1]|}checked{|/if|} >
                {|$translate_ponedelnik|}
            </label>
            <label>
                <input type="checkbox" value="2" name="{|$index|}_week[]" {|if $weekArray[2]|}checked{|/if|} >
                {|$translate_vtornik|}
            </label>
            <label><input type="checkbox" value="3" name="{|$index|}_week[]" {|if $weekArray[3]|}checked{|/if|} >
                {|$translate_sreda|}
            </label>
            <label><input type="checkbox" value="4" name="{|$index|}_week[]" {|if $weekArray[4]|}checked{|/if|} >
                {|$translate_chetverg|}
            </label>
            <label><input type="checkbox" value="5" name="{|$index|}_week[]" {|if $weekArray[5]|}checked{|/if|} >
                {|$translate_pyatnitsa|}
            </label>
            <label><input type="checkbox" value="6" name="{|$index|}_week[]" {|if $weekArray[6]|}checked{|/if|} >
                {|$translate_subbota|}
            </label>
            <label><input type="checkbox" value="7" name="{|$index|}_week[]" {|if $weekArray[7]|}checked{|/if|} >{|$translate_voskresene|}
            </label>
        </div>
    </div>
</div>