{|*|}

{|foreach from=$listsArray item="e"|}
    <div class="os-block-caption"><h3>{|$e.name|}</h3></div>
    {|$e.html|}
{|/foreach|}


{|$seocontent|}

{|$noticeOfAvailability|}
