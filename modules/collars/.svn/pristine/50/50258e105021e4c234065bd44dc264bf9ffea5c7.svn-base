                    <div class="image">
                        <a target="_blank" href="{|$p.url|}">
                            <img src="{|$p.image|}">
                        </a>
                    </div>
                    <div class="name">
                        <a href="{|$p.url|}">
                            {|$p.name|}
                        </a>
                    </div>
                </div>
                {|/foreach|}
            </div>
            <div class="block-buy">
                {|$translate_tsena_dannogo_nabora|}:
