<div class="cl-crumbs">
    <div>
        <a href="/">{|$translate_main|}</a>
    </div>
    <div>
        <a href="#">{|$translate_remind_password|}</a>
    </div>
</div>


{|if $message == 'ok'|}
    <div class="os-message-success">
        {|$translate_remind_password_success|}.
    </div>
{|/if|}

{|if $message == 'error'|}
    {|if $errors == 'login_empty'|}
        <div class="os-message-error">
            {|$translate_enter_data|}.
        </div>
    {|else|}
        <div class="os-message-error">
            {|$translate_remind_password_error|}.
        </div>
    {|/if|}
{|/if|}

{|if $message != 'ok'|}
    <div class="cl-block-form block-width">
        <form method="post">
            <div class="form-element">
                <div class="descript">{|$translate_login_or_mail|}:</div>
                <input type="text" name="login" value="{|$control_login|}" />
            </div>

            <div class="form-element">
                <input type="submit" name="ok" value="{|$translate_restore_password|}" class="cl-button green" />
                <input type="hidden" name="ajs" class="ajs" value="1" />
            </div>
        </form>
    </div>
{|/if|}